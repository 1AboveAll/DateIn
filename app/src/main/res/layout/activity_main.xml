<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/date"

    tools:context="com.example.avma1997.datein.MainActivity">

    <ViewFlipper
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:flipInterval="1500"
        android:autoStart="true"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.19999999"
        android:id="@+id/viewFlipper2">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="125dp"
                android:layout_height="182dp"
                android:layout_marginTop="75dp"
                android:fontFamily="sans-serif"
                android:textSize="30dp"
                android:text="Find the One Who is Meant For You" />
        <TextView
            android:id="@+id/textViewblank1"
            android:layout_width="125dp"
            android:layout_height="182dp"
            android:layout_marginTop="75dp"
            android:fontFamily="sans-serif"
            android:textSize="30dp"
            android:text="" />




        <TextView
                android:id="@+id/textView3"
                android:layout_width="125dp"
                android:layout_height="182dp"
                android:layout_marginTop="75dp"
                android:fontFamily="sans-serif"
                android:textSize="30dp"
                android:text="Connect Across The Globe" />
        <TextView
            android:id="@+id/textViewblank2"
            android:layout_width="125dp"
            android:layout_height="182dp"
            android:layout_marginTop="75dp"
            android:fontFamily="sans-serif"
            android:textSize="30dp"
            android:text="" />



        <TextView
                android:id="@+id/textView4"
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:layout_marginTop="75dp"
                android:fontFamily="sans-serif"
                android:textSize="30dp"
                android:text="Search with Tags #NonSmoker #Feminist #Risk Taker" />

        <TextView
            android:id="@+id/textViewblank3"
            android:layout_width="125dp"
            android:layout_height="182dp"
            android:layout_marginTop="75dp"
            android:fontFamily="sans-serif"
            android:textSize="30dp"
            android:text="" />




    </ViewFlipper>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook_login_button"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:textSize="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/viewFlipper2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />
</android.support.constraint.ConstraintLayout>
